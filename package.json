{
  "name": "stalker-xrts-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "info": "ts-node -P ./cli/tsconfig.json cli/info/info.ts",
    "verify": "ts-node -P ./cli/tsconfig.json cli/verify/verify.ts",
    "link": "ts-node -P ./cli/tsconfig.json cli/link/link.ts",
    "unlink": "ts-node -P ./cli/tsconfig.json cli/link/unlink.ts",
    "engine": "ts-node -P ./cli/tsconfig.json cli/engine/engine.ts",
    "open_game_folder": "ts-node -P ./cli/tsconfig.json cli/open_game_folder/open_game_folder.ts",
    "start_game": "ts-node -P ./cli/tsconfig.json cli/start_game/start_game.ts",
    "build": "ts-node -P cli/tsconfig.json ./cli/build/build.ts",
    "build:clean": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --clean",
    "build:no-resources": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --no-resources",
    "build:resources-only": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --no-scripts --no-ui --no-configs",
    "typecheck:lua": "tstl -P ./cli/build/tsconfig.scripts.json --noEmit",
    "format": "prettier --write \"**/*.(js|ts|tsx|md)\" && eslint . --ext .ts,.tsx,.js --fix",
    "lint": "eslint . --ext .ts,.tsx,.js"
  },
  "devDependencies": {
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@typescript-to-lua/language-extensions": "^1.0.0",
    "chalk": "4.1.2",
    "eslint": "^8.29.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "jsx-xml": "^0.2.3",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4",
    "typescript-to-lua": "^1.11.1"
  }
}
