{
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "../",
    "baseUrl": "./",
    "jsx": "react",
    "jsxFactory": "JSXXML",
    "lib": ["esnext", "dom"],
    "paths": {
      "#/*": ["./*"],
      "@/*": ["../src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
}
