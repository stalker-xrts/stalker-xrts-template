{
  "extends": "../../src/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "../../src/mod",
    "outDir": "../../target/gamedata"
  },
  "include": [
    "../../src/typedefs",
    "../../src/mod/lib",
    "../../src/mod/scripts",
    "../../src/mod/globals"
  ],
  "tstl": {
    "buildMode": "default",
    "luaTarget": "JIT",
    "noImplicitGlobalVariables": true,
    "noImplicitSelf": true,
    "luaPlugins": [
      { "name": "./plugins/xr_class_super_transform.ts" },
      { "name": "./plugins/built_at_info.ts" }
    ]
  }
}
